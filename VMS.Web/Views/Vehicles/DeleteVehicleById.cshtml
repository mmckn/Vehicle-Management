@model Vehicle

<h3 class="text-center mt-5 mb-5">Delete a Vehicle</h3>
<form asp-action="DeleteVehicleById">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <div class="form-group">
            <label asp-for="Id"><b>Vehicle Id</b></label>
            <input asp-for="Id" type="text" class="form-control" placeholder="Enter vehicle Id"/>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Delete Vehicle"  class="btn btn-danger"/>
        <a class="btn btn-primary" asp-action="Index">Cancel</a>


    </div>
</form>


